<div class="row-fluid">
  <div class="span12">

  <ul>
      <div id="<%= idea.id %>">
        <div class="headline">
         <a href="/users/<%=idea.user_id%>"><img src="http://farm6.staticflickr.com/5254/5488146741_b80f4b056a.jpg" class="img-polaroid"></a>
         <h3 style="border-bottom: 1px solid #EEE; "><%=idea.title%> Votes: <span><%= idea.votes.count %></span>
              Tag: <%= idea.tags.first.name %></h3>

        </div>
        <h6>Stats</h6>
        <div class="stats">
              <h3>
                <% if @user_vote_ids.include?(idea.id) %>
                  <% else %>
                      <button id="vote_<%= idea.id %>" class="voteButton">Vote</button>
               <% end %></h3>
            <ul>
              <li><%=idea.content%></li>
                <% idea.tags.each do |tag| %>
              <li><%= tag.name %></li>
              <% end %>
          </ul>
           </div>
           <div class="span9 offset2" style="background-color:white; border: 1px solid black; border-radius:5px;">
            <ol>
              <% idea.comments.each do |comment| %>
                <% counter = 0 %>
                <div id="comment_<%= comment.id %>">
                  <li><%=comment.content%></li>
                    <ul>
                      <li><small><cite class="usernameComment" id="comment.user.username" title="Source Title">--<a href="users/<%=comment.user.id%>"><%= comment.user.username %></a></cite></small></li>
                    </ul>
                </div>
              <% end %>
           </ol>
           <div id="commentBox">
            Add comment: <input id="mainComment<%= idea.id %>" type="text" name="comment">
            <button id="<%= idea.id * 2 %>" class="mainCommentButton">submit</button>
          </div>
          </div>
      </div>
    </ul>
  </div>
</div>






