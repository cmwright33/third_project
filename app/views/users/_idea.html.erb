<div class="userIdeaClass">
  <ul id="<%= @user.id %>">
  <% @user_ideas.each do |idea| %>
    <div id="<%= idea.id %>">
      <li><%= idea.title %>(<span><%= idea.votes.count %></span>)</li>
      <% if @user_vote_ids.include?(idea.id) %>
        <% else %>
              <button id="vote_<%= idea.id %>" class="voteButton">Vote</button>
      <% end %>
    <ul>
      <% idea.tags.each do |tag| %>
        <li><%= tag.name %></li>
      <% end %>
    </ul>
    <ol>
      <% idea.comments.each do |comment| %>
        <li><%= comment.content %></li>
      <% end %>
    </ol>
      Add comment: <input id="comment" type="text" name="comment">
      <button id="<%= idea.id * 2 %>" class="userCommentButton">submit</button>
    </div>
  <% end %>
  </ul>
</div>