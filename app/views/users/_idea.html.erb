<div class="fluid-row">
  <div class="span12">
    <div class="userIdeaClass">
      <ul id="<%= @user.id %>">
        <% @user_ideas.each do |idea| %>
        <div class="span12" id="idea-container">
          <div id="<%= idea.id %>">
           <div class="span11" style="border-bottom: 1px solid #EEE;" >
            <div class="span3">
              <h3 ><%=idea.title%></h3>

            </div>
            <div class="span4">
             <h3>Votes: <%= idea.votes.count %></h3>
           </div>
           <div class="span3">
             <h5>Tag: <%= idea.tags.first.name %></h5>
           </div>
         </div>
         <div class="span11">
          <div class="stats">
            <p><%= idea.content %></p>
            <small><cite>created at <%=idea.created_at%></cite></small>
          </div>
        </div>
        <ul>
          <% idea.comments.each do |comment| %>
          <div class="span9 offset2" id="idea-comments">
            <h6>comment</h6>
            <li><%=comment.content%></li>
            <li><small><cite title="Source Title">--<%=comment.user.email%>, created at (<%=comment.created_at%>)</cite></small></li>
          </div>
          <% end %>
          Add comment: <input id="comment" type="text" name="comment" placeholder="add a comment">
          <button id="<%= idea.id * 2 %>" class="userCommentButton">submit</button>
        </ul>
      </div>
    </div>
    <% end %>
  </ul>
</div>
</div>
</div>

