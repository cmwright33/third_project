      <div class="fluid-row">
        <div class="span12">
        <div class="userIdeaClass">
          <ul id="<%= @user.id %>">
            <% @user_ideas.each do |idea| %>
            <div id="<%= idea.id %>" class="individual-idea-container">
              <div class="headline">
               <img src="http://farm6.staticflickr.com/5254/5488146741_b80f4b056a.jpg" class="img-polaroid-index">
                <h3 style="border-bottom: 1px solid #EEE; "><%=idea.title%></h3>
              </div>
              <%= idea.content %>
              <%= idea.votes.count %>
              <ul>
                <% idea.comments.each do |comment| %>
                <div class="span9 offset2" id="idea-comments">
                    <h6>comment</h6>
                    <li><%=comment.content%></li>
                    <li><small><cite title="Source Title">--<%=comment.user.email%></cite></small></li>
                </div>
                <% end %>
              Add comment: <input id="comment" type="text" name="comment">
              <button id="<%= idea.id * 2 %>" class="userCommentButton">submit</button>
              </ul>
            </div>
            <% end %>
          </ul>
        </div>
      </div>
    </div>

