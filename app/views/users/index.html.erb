<%= @user %>
<%= link_to "Sign out", destroy_user_session_path, :method => :delete %>

<h1>New idea</h1>

<%= render 'form' %>

<div class="userIdeaClass">
  <ul id="<%= @user.id %>">
  <%= @user_ideas.each do |idea| %>
    <div id="<%= idea.id %>">
      <li><%= idea.title %></li>
      Add comment: <input id="comment" type="text" name="comment"><button id="<%= idea.id * 2 %>" class="commentButton">submit</button>
    </div>
    <ul>
      <% idea.comments.each do |comment| %>
        <li><%= comment.content %></li>
      <% end %>
    </ul>
  <% end %>
  </ul>
</div>

